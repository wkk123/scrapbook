/**index.wxss**/
.add{
  width: 100vw;
  height: 100vh;
  background-color: #F3F5F6;
  overflow-y: auto;
  padding: 32rpx;
  box-sizing: border-box;
}
.add_list {
  width: 100%;
  height: auto;
  padding: 10rpx 26rpx;
  box-sizing: border-box;
  color: #595959;
  background-color: #ffffff;
  font-size: 32rpx;
  border-radius: 16rpx;
}
.list_item{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  height: 80rpx;
  border-bottom: 1rpx solid #EBEBEB;
  margin-bottom: 10rpx;
}
.list_item:last-child{
  border-bottom: none;
}
.add_label{
  display: inline-block;
  width: 130rpx;
}
.add_content{
  width: calc(100% - 130rpx);
  height: 100%;
  display: flex;
  align-items: center;
}
.picker{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: red;
}
.btn-area{
  width: 100%;
  display: flex;
  justify-content: center;
}
.btn-add{
  width: 100%;
  height: 90rpx;
  padding: 0;
  margin: 0;
  margin-top: 200rpx;
  background-color: #4E84EC;
  font-size: 36rpx;
  font-weight: 400;
  color: #ffffff;
  border-radius: 46px;
  display: flex;
  justify-content: center;
  align-items: center;
}